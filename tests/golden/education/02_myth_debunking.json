{
  "id": "education-002",
  "name": "Myth Debunking - Spot Reduction",
  "description": "User asks about spot reduction for fat loss",
  "domain": "education",
  "expected_agents": ["genesis_x", "logos"],
  "conversation": [
    {
      "role": "user",
      "content": "Can I do ab exercises to lose belly fat specifically? I've heard crunches burn belly fat."
    },
    {
      "role": "assistant",
      "agent": "logos",
      "expected_behavior": {
        "should_route_to": "logos",
        "should_use_tool": "debunk_myth",
        "should_mention": ["spot reduction", "myth", "overall fat loss"]
      },
      "validation_rules": {
        "min_response_length": 200,
        "must_contain_any": ["spot reduction", "myth", "cannot", "overall", "caloric deficit"],
        "must_not_contain": ["yes you can", "crunches burn belly fat"]
      }
    }
  ],
  "assertions": {
    "latency_p95_ms": 4000,
    "cost_max_usd": 0.05
  },
  "tags": ["education", "myths", "logos", "spot-reduction"]
}
