{
  "id": "recovery-001",
  "name": "Sleep Optimization for Recovery",
  "description": "User asks about improving sleep for better recovery",
  "domain": "recovery",
  "expected_agents": ["genesis_x", "wave"],
  "conversation": [
    {
      "role": "user",
      "content": "I train hard but feel tired all the time. My sleep is only 5-6 hours. How can I improve my recovery?"
    },
    {
      "role": "assistant",
      "agent": "wave",
      "expected_behavior": {
        "should_route_to": "wave",
        "should_mention": ["sleep", "recovery", "7-9 hours", "routine"]
      },
      "validation_rules": {
        "min_response_length": 200,
        "must_contain_any": ["sleep", "recovery", "hours", "rest"],
        "must_not_contain": ["error"]
      }
    }
  ],
  "assertions": {
    "latency_p95_ms": 2000,
    "cost_max_usd": 0.02
  },
  "tags": ["recovery", "sleep", "wave", "fatigue"]
}
